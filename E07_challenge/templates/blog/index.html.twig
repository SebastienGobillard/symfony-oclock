{% extends 'base.html.twig' %}

{% block body %}
    <h1>List des posts</h1>
    <ol>
        {% for post in posts %}
            <li>
                <a href="{{ path('blog.show', {'id': post.id}) }}">
                    {{ post.title }}
                </a>
            </li>
        {% endfor %}
    </ol>
{% endblock %}