{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ post.title }}</h1>
    <p>{{ post.body }}</p>

    <h2>Commentaires</h2>

    <ul class="list-group">
        {% for review in post.reviews %}
            <li class="list-group-item">
                <h5>{{ review.username }}
                    <small class="text-muted">le {{ review.createdAt | date('m/d/Y Ã  H:m') }}.</small>
                </h5>
                <p class="card-text">{{ review.body }}</p>
            </li>
        {% endfor %}
    </ul>

    <form action="{{ path('blog.show', {'id': post.id}) }}" method="post" class="form-inline mt-2">
        <div class="form-group mr-sm-2">
            <input type="text" class="form-control" id="username" name="username" placeholder="Votre nom" />
        </div>
        <div class="form-group mr-sm-2">
            <input type="text" name="body" id="body" class="form-control" placeholder="Votre commentaire..." />
        </div>
        <button class="btn btn-primary" type="submit">Commenter</button>
    </form>


    <hr>
    {{ dump(post) }}
{% endblock %}

